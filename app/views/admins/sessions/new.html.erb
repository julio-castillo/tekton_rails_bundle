<h2 class="form-signin-heading">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email address" %>
  <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Email address" %>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <label>
        <%= f.check_box :remember_me %> Remember me
      </label>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%= render "admins/shared/links" %>
