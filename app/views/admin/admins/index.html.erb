<h1 class="page-header">Admins</h1>

<div class="table-responsive">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @admins.each do |admin| %>
        <tr>
          <td><%= admin.name %></td>
          <td><%= admin.email %></td>
          <td><%= link_to 'Show', [:admin, admin] %>
          <%= link_to 'Edit', edit_admin_admin_path(admin) %>
          <%= link_to 'Destroy', [:admin, admin], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Admin', new_admin_admin_path, class: "btn btn-primary" %>
