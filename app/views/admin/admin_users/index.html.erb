<% breadcrumb :admin_users %>

<h1 class="page-header">
  Admin Users
  <%= link_to 'New Admin User', new_admin_admin_user_path, class: "btn btn-primary pull-right" %>
</h1>

<div class="table-responsive">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @admin_users.each do |admin_user| %>
        <tr>
          <td><%= admin_user.name %></td>
          <td><%= admin_user.email %></td>
          <td><%= link_to 'Show', [:admin, admin_user] %>
          <%= link_to 'Edit', edit_admin_admin_user_path(admin_user) %>
          <%= link_to 'Destroy', [:admin, admin_user], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= will_paginate @admin_users %>

